meta {
  name: Recipes by authorId
  type: http
  seq: 11
}

get {
  url: {{baseUrl}}{{recipePrefix}}/author/{{authorId}}?page=1&limit=5
  body: none
  auth: none
}

params:query {
  page: 1
  limit: 5
}

headers {
  x-gateway-api-key: {{gatewayKey}}
}

assert {
  res.body.data: isJson
  res.body.data.recipes: isArray
}

settings {
  encodeUrl: true
  timeout: 0
}
