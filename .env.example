# ===========================================
# ft_transcendence - Variables d'Environnement
# ===========================================
# 
# Instructions :
# 1. Copiez ce fichier vers .env
#    $ cp .env.example .env
# 2. Remplissez les valeurs nécessaires
# 3. NE JAMAIS committer le fichier .env
#
# ===========================================

# -------------------------------------------
# Application
# -------------------------------------------
NODE_ENV=development
APP_NAME=ft_transcendence
APP_URL=https://localhost:8080
API_URL=https://localhost:3000

# -------------------------------------------
# Base de données
# -------------------------------------------
# PostgreSQL (recommandé)
DATABASE_URL=postgresql://user:password@db:5432/transcendence
# OU MySQL
# DATABASE_URL=mysql://user:password@db:3306/transcendence
# OU MongoDB
# DATABASE_URL=mongodb://user:password@db:27017/transcendence

DB_HOST=db
DB_PORT=5432
DB_NAME=transcendence
DB_USER=user
DB_PASSWORD=your_secure_password_here

# -------------------------------------------
# Authentification
# -------------------------------------------
# Secret pour JWT (générer avec: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here_replace_this
JWT_EXPIRES_IN=7d

# Secret pour les sessions
SESSION_SECRET=your_session_secret_here_replace_this

# -------------------------------------------
# OAuth 2.0 (optionnel - pour module OAuth)
# -------------------------------------------
# 42 API
FORTYTWO_CLIENT_ID=
FORTYTWO_CLIENT_SECRET=
FORTYTWO_CALLBACK_URL=https://localhost:3000/auth/42/callback

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://localhost:3000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=https://localhost:3000/auth/github/callback

# -------------------------------------------
# 2FA (optionnel - pour module 2FA)
# -------------------------------------------
TWO_FA_APP_NAME=ft_transcendence

# -------------------------------------------
# Email (optionnel)
# -------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@transcendence.local

# -------------------------------------------
# Upload de fichiers (optionnel)
# -------------------------------------------
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=/app/uploads

# -------------------------------------------
# Redis (optionnel - pour cache/sessions)
# -------------------------------------------
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# -------------------------------------------
# WebSocket
# -------------------------------------------
WS_PORT=3001
WS_PATH=/socket.io

# -------------------------------------------
# Monitoring (optionnel - pour modules DevOps)
# -------------------------------------------
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# -------------------------------------------
# Blockchain (optionnel - pour modules Blockchain)
# -------------------------------------------
# Avalanche
AVALANCHE_RPC_URL=
AVALANCHE_PRIVATE_KEY=

# -------------------------------------------
# IA (optionnel - pour modules IA)
# -------------------------------------------
# OpenAI
OPENAI_API_KEY=

# -------------------------------------------
# Sécurité (production)
# -------------------------------------------
# CORS
CORS_ORIGIN=https://localhost:8080

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------------------------
# Docker
# -------------------------------------------
COMPOSE_PROJECT_NAME=transcendence

# -------------------------------------------
# Ports
# -------------------------------------------
FRONTEND_PORT=8080
BACKEND_PORT=3000
